      /* remove background */
      html {  
        background: #313236;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;   
      }
      #done img {
           text-align: center;
            width: 260px;
            display:block;
            margin: 0 auto;
      }

      #step2, #step3, #step4, #done {
        display: none;
      }

      h1, h2, h3 {text-align: center;}

  </style>

